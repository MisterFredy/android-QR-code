<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_machine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UpdateMachine">

    <TextView
        android:id="@+id/tv_e_0id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="id" />

    <TextView
        android:id="@+id/tv_e_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_e_0id"
        android:layout_below="@+id/tv_e_0id"
        android:layout_marginTop="10dp"
        android:text="@+id/tv_e_id" />

    <TextView
        android:id="@+id/tv_e_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_e_id"
        android:layout_below="@+id/tv_e_id"
        android:layout_marginTop="10dp"
        android:text="Name" />

    <EditText
        android:id="@+id/et_e_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_e_Name"
        android:layout_below="@+id/tv_e_Name"
        android:inputType="text"
        android:maxLength="20"/>

    <TextView
        android:id="@+id/tv_e_Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_e_Name"
        android:layout_below="@+id/et_e_Name"
        android:layout_marginTop="10dp"
        android:text="Type" />

    <EditText
        android:id="@+id/et_e_Type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_e_Type"
        android:layout_below="@+id/tv_e_Type"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv_e_QRcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_e_Type"
        android:layout_below="@+id/et_e_Type"
        android:layout_marginTop="10dp"
        android:text="QR code number" />

    <EditText
        android:id="@+id/et_e_QRcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_e_QRcode"
        android:layout_below="@+id/tv_e_QRcode"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/tv_e_Maintenance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_e_QRcode"
        android:layout_below="@+id/et_e_QRcode"
        android:layout_marginTop="10dp"
        android:text="Last maintenance date" />

    <EditText
        android:id="@+id/et_e_Maintenance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_e_Maintenance"
        android:layout_below="@+id/tv_e_Maintenance"
        android:clickable="true"
        android:inputType="none"
        />

    <Button
        android:id="@+id/e_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_e_Maintenance"
        android:layout_alignParentBottom="true"
        style="?android:attr/borderlessButtonStyle"
        android:text="save" />

    <Button
        android:id="@+id/e_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/et_e_Maintenance"
        android:layout_alignEnd="@+id/et_e_Maintenance" />

</RelativeLayout>