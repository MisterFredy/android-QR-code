<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scan_qr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".scanQR">

    <TextView
        android:id="@+id/tv_name_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="104dp"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_type_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_name_qr"
        android:layout_below="@+id/tv_name_qr"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_code_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_type_qr"
        android:layout_below="@+id/tv_type_qr"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_lastmaintenace_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_code_qr"
        android:layout_below="@+id/tv_code_qr"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignLeft="@id/TextView04"
        android:layout_alignBottom="@id/tv_lastmaintenace_qr"
        android:text="Last Maintenance" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignLeft="@id/TextView02"
        android:layout_alignBottom="@id/tv_code_qr"
        android:text="QR code" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_type_qr"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_alignBottom="@+id/tv_type_qr"
        android:text="Type" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_type_qr"
        android:layout_alignParentLeft="true"
        android:text="Name" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView04"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_marginTop="40dp"
        android:text="back" />

</RelativeLayout>